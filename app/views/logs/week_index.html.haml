- path = "#{request.fullpath}"
.row.title
  .card
    .card-content
      =link_to '月カレンダー', root_path,  method: :get,  class:'waves-effect waves-light btn'
      = week_calendar events: @logs do |date, logs|
        = link_to date.day
        %br
        = "<食事一覧>"
        - logs.each do |log|
          %div
            = link_to log.name, log
        -# カレンダーの日付を用いた変数の定義
        - sum_oneday_logs = Log.where('start_time LIKE(?)',"#{path.delete("/logs/week_index?start_date=").gsub(/(.{3})$/, '')}-#{sprintf('%02d',date.day)}%")
        - sum_this_week_day_logs=Log.where('start_time LIKE(?)',"#{Time.now.strftime('%Y-%m')}-#{sprintf('%02d',date.day)}%")
        -if path == "/logs/week_index"
          .bottom-content
            %p
              = "<PFCバランス>" 
            %p
              = "P #{sum_this_week_day_logs.sumprotein.to_i}g"
            %p
              = "F #{sum_this_week_day_logs.sumfat.to_i}g"
            %p
              = "C #{sum_this_week_day_logs.sumcarbohydrate.to_i}g"
            %p
              = "<daily>"
            %p
              = "#{sum_this_week_day_logs.sumkcal.to_i}kcal/日"
        -else  
          .bottom-content
            %p
              = "<PFCバランス>" 
            %p
              = "P #{sum_oneday_logs.sumprotein.to_i}g"
            %P
              = "F #{sum_oneday_logs.sumfat.to_i}g"
            %P
              = "C #{sum_oneday_logs.sumcarbohydrate.to_i}g"
            %p
              = "<daily>"
            %p
              = "#{sum_oneday_logs.sumkcal.to_i}kcal/日"

    